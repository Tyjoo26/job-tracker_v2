<h1>All Categories</h1>

<% @categories.each do |category| %>
<%= link_to category.title, category_path(category) %><br>
<%= link_to "Edit", edit_category_path(category) %>
<%= link_to "Delete", category_path(category),:data => {:confirm => "Confirm Delete?", :method => "delete"} %>
<% end %><br>
<%= link_to "Create Category", new_category_path %>
