<h2>Create a new job at <%= @company.name %> here!</h2>

<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  Select Category: <%= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true%><br>
  <%= link_to "Create Category", new_category_path %>

<br>
<div class="">
  <%= f.submit "Create"%>
</div>

<% end %>
